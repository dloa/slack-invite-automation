  body
    #particles-js(style="z-index: -1; position: fixed; width: 100vw; height: 100vh;")
    #wrapper
      .main
        .header
          h1 Why hello there.
          h2 You've stumbled upon a door where your mind is the #[a(style="color: white; font-weight: 300; cursor: default; text-decoration: none" target="_blank" href="http://www.erh.noaa.gov/er/cae/svrwx/nsslhail3.jpg") key]#[a(style="color: white; font-weight: 300; cursor: default; text-decoration: none" target="_blank" href="https://i.imgur.com/36OwSMF.png") .]
        .content
          .information
            form(method="POST", action="/invite")#join-form.form
              input(type="text", name="email", placeholder="Enter Your Email Address")#email.field
              if tokenRequired
                input(type="text", name="token", placeholder="Enter invite key")#token.field
              input(type="submit", value="Join").submit
    script(src='js/particles.js')
    script.
      var tokenRequired = #{tokenRequired};
      var form = document.getElementById('join-form');
      var email = document.getElementById('email');
      var token = document.getElementById('token');
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
        if (tokenRequired && !token.value) {
          evt.preventDefault();
        }
      });
      particlesJS.load('particles-js', 'particlesjs-config.json', function() {
        console.log('callback - particles.js config loaded');
      });